export DISPLAY=:99.0
/etc/init.d/xvfb start

cd test && npm start &
SERVER_PID=$!

until $(curl --output /dev/null --silent --head --fail http://localhost:3000); do
    printf '.'
    sleep 5
done

NODE_ENV=integration ./node_modules/.bin/ghostjs --ghost-runner slimerjs-core $(find packages -name '*.ghost.js')
STATUS=$?

kill -9 $SERVER_PID || true
exit $STATUS
