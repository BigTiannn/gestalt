{
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build_docs": "webpack --config webpack.config.corkboard.js --colors --progress --optimize-minimize --output-public-path '/gestalt' --output-path docs",
    "build": "webpack --config webpack.config.js",
    "eslint": "eslint . --ext js",
    "flow": "flow .",
    "ghost": "./run_integration_tests",
    "lint": "npm run eslint && npm run stylelint",
    "release:publish": "lerna exec npm publish --registry http://sinopia.ec2.pin220.com:8080",
    "release:version": "lerna publish --skip-npm --force-publish=*",
    "start": "webpack-dev-server --config webpack.config.corkboard.js --progress --colors",
    "stylelint": "stylelint packages/**/*.css",
    "test:integration": "./run_integration_tests",
    "test": "jest",
    "test:all": "npm run stylelint && npm run eslint && npm run flow && npm test && npm run test:integration"
  },
  "author": "Pinterest",
  "license": "MIT",
  "devDependencies": {
    "assert": "^1.4.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-webpack-loaders": "^0.5.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "classnames": "^2.2.5",
    "corkboard": "^0.3.2",
    "css-loader": "^0.23.1",
    "ejs": "^2.5.2",
    "enzyme": "^2.3.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-config-cssnano": "^3.1.3",
    "eslint-config-postcss": "^2.0.2",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-loader": "^1.4.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.36.0",
    "flow-status-webpack-plugin": "^0.1.5",
    "ghost-axe": "0.0.2",
    "ghostjs": "^1.7.1",
    "html-webpack-plugin": "^2.22.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^17.0.3",
    "lerna": "2.0.0-beta.28",
    "open-browser-webpack-plugin": "0.0.2",
    "postcss": "^5.1.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "postcss-safe-parser": "^1.0.7",
    "postcss-url": "^5.1.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "react-test-renderer": "^15.3.2",
    "slimerjs-core": "^0.11.6",
    "style-loader": "^0.13.0",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.0"
  },
  "jest": {
    "automock": true,
    "unmockedModulePathPatterns": [
      "enzyme",
      "react",
      "classnames",
      "react-test-renderer"
    ],
    "transformIgnorePatterns": [
      "/node_modules/^gestalt-*"
    ],
    "modulePathIgnorePatterns": [
      "\\.ghost\\.js$"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-named": [
        "never",
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "custom-property-no-outside-root": true,
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignore": [
            "consecutive-duplicates"
          ]
        }
      ],
      "declaration-block-properties-order": [
        [
          "composes"
        ],
        {
          "unspecified": "bottomAlphabetical"
        }
      ],
      "declaration-no-important": true,
      "function-url-quotes": "always",
      "indentation": 2,
      "max-nesting-depth": 0,
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "no-unknown-animations": true,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "root-no-standard-properties": true,
      "rule-nested-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ]
        }
      ],
      "selector-no-id": true,
      "selector-no-vendor-prefix": true,
      "stylelint-disable-reason": "always-before",
      "unit-blacklist": [
        "em"
      ],
      "value-no-vendor-prefix": true
    }
  }
}
