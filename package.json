{
  "name": "gestalt",
  "version": "0.19.0",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://pinterest.github.io/gestalt",
  "bugs": "https://github.com/pinterest/gestalt/issues",
  "main": "dist/gestalt.js",
  "jsnext:main": "dist/gestalt.es.js",
  "module": "dist/gestalt.es.js",
  "style": "dist/gestalt.css",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.1"
  },
  "scripts": {
    "build_docs": "webpack --config webpack.config.corkboard.js --colors --progress --optimize-minimize --output-public-path '/gestalt' --output-path docs",
    "eslint": "eslint . --ext js",
    "flow": "flow",
    "ghost": "BUILDKITE_PARALLEL_JOB_COUNT=${BUILDKITE_PARALLEL_JOB_COUNT} BUILDKITE_PARALLEL_JOB=${BUILDKITE_PARALLEL_JOB} ./run_integration_tests",
    "lint": "npm run eslint && npm run stylelint",
    "prepublish": "rollup -c rollup.config.js",
    "start": "webpack-dev-server --config webpack.config.corkboard.js --progress --colors --open",
    "stylelint": "stylelint src/**/*.css",
    "test:all": "npm run stylelint && npm run eslint && npm run flow && npm test && npm run ghost",
    "test": "jest",
    "watch": "rollup -c rollup.config.js --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-webpack-loaders": "^0.5.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "classnames": "^2.2.5",
    "corkboard": "^0.3.2",
    "css-loader": "^0.23.1",
    "cssnano": "^3.10.0",
    "ejs": "^2.5.2",
    "enzyme": "^2.3.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-cssnano": "^3.1.3",
    "eslint-config-postcss": "^2.0.2",
    "eslint-import-resolver-webpack": "^0.5.1",
    "eslint-loader": "^1.4.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "0.42.0",
    "flow-status-webpack-plugin": "^0.1.5",
    "ghost-axe": "^0.0.3",
    "ghostjs": "^1.7.1",
    "html-webpack-plugin": "^2.22.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^17.0.3",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.28",
    "mocha": "^3.2.0",
    "open-browser-webpack-plugin": "0.0.2",
    "postcss": "^5.1.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-modules": "^0.6.4",
    "postcss-reporter": "^1.3.3",
    "postcss-safe-parser": "^1.0.7",
    "postcss-url": "^5.1.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^1.3.0",
    "react-test-renderer": "^15.3.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-watch": "^3.2.2",
    "shelljs": "^0.7.7",
    "slimerjs-core": "^0.12.0",
    "style-loader": "^0.13.0",
    "stylelint": "^7.9.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.3.0",
    "svg-path-loader": "^0.0.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.0"
  },
  "jest": {
    "testRegex": "jest\\.js$",
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "color-named": [
        "never",
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignore": [
            "consecutive-duplicates"
          ]
        }
      ],
      "declaration-no-important": true,
      "function-url-quotes": "always",
      "indentation": 2,
      "max-nesting-depth": 0,
      "media-feature-name-no-unknown": [
        true,
        {
          "ignoreMediaFeatureNames": "inverted-colors"
        }
      ],
      "no-descending-specificity": true,
      "no-duplicate-selectors": true,
      "no-unknown-animations": true,
      "order/declaration-block-properties-specified-order": [
        [
          "composes"
        ],
        {
          "unspecified": "bottomAlphabetical"
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "property-no-vendor-prefix": true,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ]
        }
      ],
      "selector-no-id": true,
      "selector-no-vendor-prefix": true,
      "unit-blacklist": [
        "em"
      ],
      "value-no-vendor-prefix": true
    }
  }
}
