{
  "name": "pinterest-gestalt",
  "version": "0.0.1",
  "private": true,
  "description": "Pinterest web components written in React.",
  "scripts": {
    "start": "npm run server | npm run dev",
    "server": "DEBUG=* ./node_modules/.bin/babel-node server.js",
    "dev": "webpack-dev-server --hot --inline --progress --colors --port 8090",
    "lint": "npm run lint:eslint ; npm run lint:stylelint",
    "lint:eslint": "./node_modules/eslint/bin/eslint.js . --ext js",
    "lint:stylelint": "./node_modules/stylelint/dist/cli.js components/**/*.css",
    "test": "./node_modules/jest-cli/bin/jest.js ."
  },
  "author": "Pinterest",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.17",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "debug": "^2.2.0",
    "eslint": "^1.10.3",
    "eslint-config-pinterest": "^4.0.0",
    "eslint-plugin-pinterest": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "hapi": "^12.1.0",
    "hapi-async-handler": "^1.0.3",
    "inert": "^3.2.0",
    "jest-babel": "^1.0.1",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "style-loader": "^0.13.0",
    "stylelint": "^5.1.0",
    "stylelint-config-standard": "^4.0.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.0"
  },
  "peerDependencies": {
    "babel-loader": "^6.2.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "style-loader": "^0.13.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ],
    "scriptPreprocessor": "<rootDir>/jestPreprocessor.js"
  }
}
