{
  "name": "pinterest-gestalt",
  "version": "0.0.7",
  "description": "Pinterest web components written in React.",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "clean": "rm -f dist/main.js",
    "clobber": "rm -rf dist",
    "devserver": "webpack-dev-server --hot --inline --progress --colors --config webpack.config.docs.js",
    "lint:eslint": "./node_modules/eslint/bin/eslint.js . --ext js",
    "lint:stylelint": "./node_modules/stylelint/dist/cli.js src/**/*.css",
    "lint": "npm run lint:eslint ; npm run lint:stylelint",
    "start": "npm run devserver",
    "test": "npm run lint:stylelint && npm run lint:eslint && npm run test:integration && npm run test:jest",
    "test:integration": "./run_integration_tests",
    "test:jest": "./node_modules/jest-cli/bin/jest.js ."
  },
  "author": "Pinterest",
  "license": "MIT",
  "devDependencies": {
    "assert": "^1.4.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^10.0.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-loaders": "^0.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "devcards": "chrislloyd/devcards",
    "enzyme": "^2.3.0",
    "eslint": "^2.5.3",
    "eslint-config-pinterest": "^17.0.0",
    "eslint-plugin-pinterest": "^3.0.0",
    "eslint-plugin-react": "^4.2.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "ghostjs": "^1.6.0",
    "jest-cli": "^0.10.0",
    "open-browser-webpack-plugin": "0.0.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-class-prefix": "^0.3.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.2",
    "postcss-importantly": "0.0.7",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.3.3",
    "postcss-url": "^5.1.2",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^1.3.0",
    "slimerjs": "^0.906.1",
    "style-loader": "^0.13.0",
    "stylelint": "^5.1.0",
    "stylelint-config-standard": "^4.0.1",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.0"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/enzyme",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom"
    ],
    "scriptPreprocessor": "<rootDir>/jestPreprocessor.js",
    "testDirectoryName": "src",
    "testFileExtensions": [
      "jest.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__docs__/"
    ]
  }
}
